# Backend Environment Variables Template
# Copy this to .env and fill in your actual values

# Required for Railway deployment
SECRET_KEY=your-super-secret-key-here-make-it-long-and-random
ENVIRONMENT=production

# Database (Railway will provide this automatically)
DATABASE_URL=postgresql://username:password@host:port/database

# AI Service Configuration
AI_SERVICE_TYPE=claude
AI_API_KEY=your-ai-api-key-here
AI_MODEL_NAME=claude-3-5-sonnet-20241022

# CORS Settings (update with your Netlify URL after deployment)
BACKEND_CORS_ORIGINS=["https://your-netlify-app.netlify.app"]

# Optional: Email settings for password reset
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-password
FROM_EMAIL=noreply@verbatimai.com
FRONTEND_URL=https://your-netlify-app.netlify.app

# Optional: Error monitoring
# SENTRY_DSN=your-sentry-dsn-here
